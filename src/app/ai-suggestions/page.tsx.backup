  id: string
  homeTeam: {
    id: string
    name: string
    sport: string
    city: string
  }
  awayTeam: {
    id: string
    name: string
    sport: string
    city: string
  }
  venue: {
    id: string
    name: string
    courtNumber: string
    pricePerHour: number
  }
  vendor: {
    name: string
    slug: string
  }
  scheduledTime: string
  duration: number
  aiScore: number
  scoringFactors: {
    timeSlotCompatibility: number
    venuePreference: number
    teamAvailability: number
    travelDistance: number
    venueAvailability: number
    skillLevelMatch: number
