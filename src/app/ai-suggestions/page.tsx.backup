        },
        scheduledTime: new Date(Date.now() + 7 * 24 * 60 * 60 * 1000).toISOString(), // Next week
        duration: 2,
        aiScore: 0.92,
        scoringFactors: {
          timeSlotCompatibility: 1.0,
          venuePreference: 0.9,
          teamAvailability: 1.0,
          travelDistance: 0.8,
          venueAvailability: 1.0,
