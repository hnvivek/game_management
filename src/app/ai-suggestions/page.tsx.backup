        },
        scheduledTime: new Date(Date.now() + 8 * 24 * 60 * 60 * 1000).toISOString(), // Next week + 1 day
        duration: 2,
        aiScore: 0.87,
        scoringFactors: {
          timeSlotCompatibility: 0.9,
          venuePreference: 0.85,
          teamAvailability: 1.0,
          travelDistance: 0.75,
          venueAvailability: 0.9,
          skillLevelMatch: 0.85
